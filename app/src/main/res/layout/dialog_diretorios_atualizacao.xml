<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Selecione o local de download"
        android:textAlignment="center"
        android:textColor="@color/preto" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDropbox"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/fundo_paginas"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/btnVisualColeta"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/dropbox"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Dropbox"
                        android:textColor="@color/preto"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,SmallSp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardGDrive"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/fundo_paginas"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/btnEnviar"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/googledrive"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtEnviar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Google Drive"
                        android:textColor="@color/preto"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,SmallSp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImprime"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:layout_margin="3dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/fundo_paginas">

                    <ImageView
                        android:id="@+id/btnImprimir"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ticket"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Imprimir Ticket"
                        android:textAlignment="center"
                        android:textColor="@color/preto"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,SmallSp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>