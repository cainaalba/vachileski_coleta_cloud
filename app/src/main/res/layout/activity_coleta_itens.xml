                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item: "
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform" />

                <EditText
                    android:id="@+id/txtItem"
                    android:layout_width="42dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/bordas_campos"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#E65100"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qtde: "
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform" />

                <EditText
                    android:id="@+id/cmpQtdCol"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/bordas_campos"
                    android:ems="10"
                    android:hint="Qtd"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/btnCancelCopia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/yellow"
                    android:text="Cancelar\nCópia"
                    android:textSize="11sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cmpBitCol"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bordas_campos"
                    android:hint="Bitola | Descrição"
                    android:imeOptions="actionNext"
                    android:inputType="textCapCharacters"
                    android:padding="5dp"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/btnBuscaProduto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:background="@drawable/search"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/cmpMarcaCol"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bordas_coleta"
                    android:hint="Marca"
                    android:imeOptions="actionNext"
                    android:inputType="textCapCharacters"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="14sp" />
                <!--                    </com.google.android.material.textfield.TextInputLayout>-->

                <!--                    <com.google.android.material.textfield.TextInputLayout-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="65dp"-->
                <!--                        android:layout_weight="1"-->
