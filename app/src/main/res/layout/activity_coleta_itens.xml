                <EditText
                    android:id="@+id/cmpDesCol"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bordas_coleta"
                    android:hint="Desenho"
                    android:imeOptions="actionNext"
                    android:inputType="textCapCharacters"
                    android:maxLength="15"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/cmpValUnit"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bordas_coleta"
                    android:hint="Valor/It R$"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:maxLength="12"/>
                <!--                    </com.google.android.material.textfield.TextInputLayout>-->
            </LinearLayout>

            <AutoCompleteTextView
                android:id="@+id/cmpObsItem"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="1dp"
                android:background="@drawable/bordas_campos_obrigat"
                android:hint="OBS Item (impresso nas fichas de produção)"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:maxLength="100"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llCamposOst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bordas_coleta"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkcAgua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="C/ Água"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <CheckBox
                    android:id="@+id/chkcCamara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="C/ Câmara"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <CheckBox
                    android:id="@+id/chkGarantia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="Garantia"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOpcoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bordas_coleta"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkUrgente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="Urgente"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!--                    <com.google.android.material.textfield.TextInputLayout-->
