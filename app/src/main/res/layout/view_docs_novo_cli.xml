<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Documentos Novo Cliente"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnRGNovoCli"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@color/red"
            android:text="RG"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/btnDocNovoCli"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:textSize="10sp"
            android:textAlignment="center"
            android:background="@color/red"
            tools:ignore="SmallSp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCompResidNovoCli"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:text="Comprov. de\nEndereÃ§o"
            android:background="@color/red"
            android:textSize="10sp"
            android:textAlignment="center"
            tools:ignore="SmallSp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <Button
            android:id="@+id/btnCancelaDocumentos"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/btnConfirmarDocumentos"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/save" />

    </LinearLayout>
</LinearLayout>