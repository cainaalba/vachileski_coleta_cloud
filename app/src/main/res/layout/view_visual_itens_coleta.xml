<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo_dialogs"
    android:orientation="vertical"
    android:padding="2dp"
    tools:ignore="SmallSp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Item: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/txtItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/bordas_campos"
            android:enabled="false"
            android:gravity="center"
            android:hint="It"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#E65100"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Qtde: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpQtdCol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/bordas_campos"
            android:enabled="false"
            android:hint="Qtd"
            android:inputType="number"
            android:maxLength="3"
            android:padding="5dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#E65100"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtStatusIt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Status: "
            android:textStyle="bold"
            android:textColor="@color/red" />

        <EditText
            android:id="@+id/cmpStatusIt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/bordas_campos_obrigat"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="2dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/red_light"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtIdentif"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Coleta: "
            android:textStyle="bold"
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpIdentificador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/bordas_campos"
            android:gravity="center"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFicha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ficha: "
            android:textStyle="bold"
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpFicha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/bordas_campos"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:padding="3dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bitola: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpBitCol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bordas_campos"
            android:ems="10"
            android:enabled="false"
            android:hint="Bitola"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine|textCapCharacters"
            android:maxLines="3"
            android:padding="3dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E65100"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Marca: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpMarcaCol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bordas_campos"
            android:ems="10"
            android:enabled="false"
            android:hint="Marca"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:padding="3dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E65100"
            android:textSize="12sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Modelo: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpModCol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bordas_campos"
            android:ems="10"
            android:enabled="false"
            android:hint="Modelo"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:padding="3dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E65100"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Série: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpSerCol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bordas_campos"
            android:ems="10"
            android:enabled="false"
            android:hint="Série"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:padding="3dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E65100"
            android:textSize="12sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="DOT: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpDotCol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bordas_campos"
            android:ems="10"
            android:enabled="false"
            android:hint="DOT"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:padding="3dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E65100"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Desenho: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpDesCol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bordas_campos"
            android:ems="10"
            android:enabled="false"
            android:hint="Desenho"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="15"
            android:padding="3dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E65100"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vlr Unit: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpValUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bordas_campos"
            android:enabled="false"
            android:hint="Valor R$"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="#E65100"
            android:textSize="12sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Total: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpValorTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bordas_campos"
            android:enabled="false"
            android:hint="Total"
            android:imeOptions="actionNext"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="#E65100"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Obs: "
            android:textColor="@color/preto" />

        <EditText
            android:id="@+id/cmpObsItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/bordas_campos"
            android:enabled="false"
            android:hint="Observação Item"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine|textCapCharacters"
            android:maxLines="5"
            android:padding="3dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="#E65100"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkUrgente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:enabled="false"
                android:padding="3dp"
                android:text="Urgente"
                android:textColor="@color/red"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/toggleButtonMontado"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:enabled="false"
                android:textColor="@color/red"
                android:textOff="Não Montado"
                android:textOn="Montado"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkcAgua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center"
                android:text="C/ Água"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/chkcCamara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center"
                android:text="C/ Câmara"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/chkGarantia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center"
                android:text="Garantia"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llComissBorr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtComissBorr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Comissão de Borracheiro"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cmpPrcComissBorr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bordas_campos"
                android:enabled="false"
                android:maxLength="15"
                android:padding="3dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#E65100"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/cmpVlrComissBorr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bordas_campos"
                android:enabled="false"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="#E65100"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
